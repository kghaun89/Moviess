@*This lives in the Movies folder*@

@model Moviess.Models.Movie

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /> <br /> <br />
<div>
    <dl class="row">
        <dt class="col-sm-3">Movies Name:</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3 text-truncate">Genre:</dt>
        <dd class="col-sm-9">@Model.Genre.Name</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-3">Details</dt>
        <dd class="col-sm-9">
            @Model.ReleaseDate<br />
            @Model.Description <br />

        </dd>

    </dl>

    <dl class="row">
        <dt class="col-sm-3">Store Data:</dt>
        <dd class="col-sm-9">
            Inventory: @Model.InStock<br />
            Added to System: <em> @Model.DateAdded.ToLongDateString() </em>

        </dd>

    </dl>


</div>
