@model IEnumerable<Moviess.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .dataTables_filter {
        float: right;
    }
</style>

<h2>Customers</h2>
@Html.ActionLink("New Customer", "New", "Customer", null, new { @class = "btn btn-primary" })
<br />
<br />


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Current Membership</th>
            <th>Discount Rate</th>
            <th>Subscribed to Newsletter</th>
            <th>Delete Cust.</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
    {
   <script type="text/javascript" src=" https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"> </script>
    
    
    <script>
    
        $(document).ready(function () {
            var table = $("#customers").DataTable({
            
                ajax: {
                    url: "/api/customers",
                    dataSrc: "",
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a href='/customer/edit/" + customer.id + "'>" + customer.name + "</a>";
                        }

                    },
                    {
                        data: "membershipType.name"

                    },
                    {
                        data: "membershipType.dicountRate",
                        render: function (data, type, customer) {
                            return data + " %";
                        }
                    },
                    {
                        data: "isSubscried"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-customer.id=" + data + ">Delete</button>";
                        }

                    }

                ]
            });

            $("#customers").on("click", "js.delete", function () {
                var button = $(this);
                buttonbox.confirm("are you sure you want to delete this customer?",
                    function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function () {
                                    table.row(button.parents("tr")).remove().draw();
                                }

                            });

                        };


                    });
            });
        });

    </script>
}